<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hossam.lockscreen.MainActivity"
    android:background="@color/colorAccent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">





        <Button
            android:id="@+id/password_buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:onClick="passwordButtons"
            android:text="Buttons Password"
            android:layout_weight="3"

            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/password_password"
            android:text="Text Password"
            android:background="@color/colorGreen"
            android:onClick="passwordPassword"
            android:layout_weight="3"
            />


        <Button
            android:id="@+id/stop_password_buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorYellow"
            android:onClick="stopLockScreen"
            android:text="Stop lock screen"
            android:layout_weight="1"

            />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
